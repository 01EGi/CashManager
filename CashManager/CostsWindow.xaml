            <Label Content="-800 грн" FontWeight="Bold" FontSize="20" HorizontalAlignment="Left" Margin="280,9,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.432,0.344"/>
        </Grid>
    </Grid>
</Window>
